<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rv_one">

<!--    <RelativeLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:visibility="gone">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="43dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="85sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="18dp"
            android:text="2000年1月1日"
            android:textSize="24sp"
            android:layout_toRightOf="@id/tv_time"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="星期一"
            android:textSize="24sp"
            android:layout_toRightOf="@id/tv_time"
            android:layout_below="@id/tv_calendar"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/picture"
            android:layout_toLeftOf="@id/et_source"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:layout_alignBottom="@id/tv_time"/>

        <EditText
            android:id="@+id/et_source"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_et_bg"
            android:drawableLeft="@drawable/bg_home_et_source"
            android:padding="8dp"
            android:hint="你要搜索什么呢"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_alignBottom="@id/tv_time"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="27dp">

        <LinearLayout
            android:id="@+id/btn_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/selector_ll_album_bg"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:layout_marginLeft="132dp"
                android:layout_marginTop="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录美好时光"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前往查看"
                android:textColor="@color/my_light_white"
                android:textSize="16sp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/selector_rl_music_bg"
            android:layout_below="@id/tv_time">

            <View
                android:id="@+id/view_horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/view_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:duplicateParentState="true"
                android:scaleType="fitCenter"
                android:src="@drawable/png_cdplayer" />

            <LinearLayout
                android:id="@+id/ll_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_horizontal"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_music_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="暂无歌名"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="33dp"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_music_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/view_horizontal"
                    android:layout_below="@id/tv_music_name"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="暂无歌手"
                    android:textColor="@color/my_light_white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_music_name"
                android:layout_toRightOf="@id/view_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/btn_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_player_previous_normal" />

                <ImageView
                    android:id="@+id/btn_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_player_play_normal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_player_next_normal" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp">

        <LinearLayout
            android:id="@+id/btn_browser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/selector_ll_browser_bg"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览器"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="45dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="探索精彩"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="探知更广视界"
                android:textColor="@color/my_light_white"
                android:textSize="16sp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/btn_projection_screen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/selector_ll_share_bg"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投屏"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="45dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多屏互动"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享更多精彩"
                    android:textColor="@color/my_light_white"
                    android:textSize="16sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/selector_ll_time_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时钟"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="45dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每时每刻"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前往设置"
                    android:textColor="@color/my_light_white"
                    android:textSize="16sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

<!--    </RelativeLayout>-->

</LinearLayout>